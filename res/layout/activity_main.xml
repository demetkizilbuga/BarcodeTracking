<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.volkanak.barkodtakip.MainActivity" >

    <EditText
        android:id="@+id/txturunAdi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="54dp"
        android:ems="10"
        android:hint="Urun Adı Giriniz.." />

    <EditText
        android:id="@+id/txtbarkod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txturunAdi"
        android:layout_below="@+id/txturunAdi"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Barkod" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/txtfiyat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/txtbarkod"
        android:layout_below="@+id/txtbarkod"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Fiyatı" />

    <EditText
        android:id="@+id/txtresim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtfiyat"
        android:layout_below="@+id/txtfiyat"
        android:layout_marginTop="27dp"
        android:ems="10"
        android:hint="Resim Yolu" />

    <Button
        android:id="@+id/button1"
        android:onClick="gonder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtresim"
        android:layout_below="@+id/txtresim"
        android:layout_marginTop="26dp"
        android:text="Urun Gonder" />

</RelativeLayout>
